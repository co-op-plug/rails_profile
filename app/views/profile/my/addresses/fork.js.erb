wx.ready(function() {
  wx.openAddress({
    success: function(res) {
      var data = new FormData()
      data.append('address[contact]', res.userName)
      data.append('address[tel]', res.telNumber)
      data.append('address[detail]', res.detailInfo)
      data.append('address[nationalCode]', res.nationalCode)
      data.append('address[postalCode]', res.postalCode)
      data.append('provinceName', res.provinceName)
      data.append('cityName', res.cityName)
      data.append('countryName', res.countryName)
      
      Rails.ajax({
        url: '<%= wechat_my_addresses_path %>',
        type: 'POST',
        data: data,
        dataType: 'script'
      })
    }
  })
})
